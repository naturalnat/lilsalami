<!doctype html>
<html>
  <head>
    <title>Neko Salame</title>
    <link href="/stylesheets/main.css" rel="stylesheet" type="text/css">
  </head>
  <body>

    <div class="header">
      <div class="title">
        <h1>
          <a href='/'>Neko Salame</a>
        </h1>
      </div>
    </div>
    <div class="wrapper">

      <% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>

<% end %>
      <%= yield %>
    </div>
</body>
</html>
